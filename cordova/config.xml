<?xml version='1.0' encoding='utf-8'?>
<widget id="com.maxfield.oats" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>OATS</name>
    <description>
	    MaXfield Online Asset Tracking System.
    </description>
    <author email="blake@intoria.com" href="https://www.intoria.com">
        Intoria Internet Architects
    </author>
    <content src="index.html" />
    <icon src="icon.png" />
    <splash src="splash.png"/>
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <!-- iPad -->
        <icon src="res/img/icon-76.png" platform="ios" width="76" height="76"/>
        <icon src="res/img/icon-76@2x.png" platform="ios" width="152" height="152"/>
        <icon src="res/img/icon-83.5@2x.png" platform="ios" width="167" height="167"/>
        <splash src="res/img/splash.png" platform="ios" width="1126" height="400"/>

        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-crosswalk-webview" spec="~2.3.0" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-ios-camera-permissions" spec="~1.1.1">
        <variable name="CAMERA_USAGE_DESCRIPTION" value="This app needs camera access" />
        <variable name="MICROPHONE_USAGE_DESCRIPTION" value="This app needs microphone access" />
        <variable name="PHOTOLIBRARY_USAGE_DESCRIPTION" value="This app needs photo library access" />
    </plugin>
    <plugin name="cordova-plugin-camera" spec="~2.4.1">
        <variable name="CAMERA_USAGE_DESCRIPTION" value=" " />
        <variable name="PHOTOLIBRARY_USAGE_DESCRIPTION" value=" " />
    </plugin>
    <plugin name="cordova-plugin-geolocation" spec="~2.4.3">
        <variable name="GEOLOCATION_USAGE_DESCRIPTION" value=" " />
    </plugin>
</widget>
